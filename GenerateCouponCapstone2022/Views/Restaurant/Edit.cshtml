@model GenerateCouponCapstone2022.Models.RestaurantDto
@{
    ViewBag.Title = "Edit";
}

<div>
    <a href="/Restaurant/List" role="button" style="color: peru;">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to the Restaurant List Page
    </a>
</div>

<h2>Update Restaurant Information</h2>

<form action="/Restaurant/Update/@Model.RestaurantID" method="post" class="editForm" style="border-radius: 5px; padding: 20px;">
    <div style="display:none;">
        @* Pass through the restaurant ID *@
        <input type="text" name="RestaurantID" value="@Model.RestaurantID" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Name: <span style="color: red;">*</span></label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 5px;">
            <input type="text" name="Name" value="@Model.Name" data-val="true" data-val-required="Please Enter a valid Restaurant Name" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", data_valmsg_for = "Name" })
        </div>
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Address:</label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 5px;">
            <input type="text" name="Address" value="@Model.Address" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
        </div>
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Phone:</label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 5px;">
            <input type="text" name="Phone" value="@Model.Phone" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
        </div>
    </div>
    <button type="submit" value="Update Restaurant" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-edit"></span> Update Restaurant</button>
</form>