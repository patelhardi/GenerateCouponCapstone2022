@model GenerateCouponCapstone2022.Models.ViewModels.DetailRestaurant
@{
    ViewBag.Title = "Details";
}

<div>
    <a href="/Restaurant/List" style="color: peru;"><span class="glyphicon glyphicon-arrow-left"></span> Back to Restaurant List Page</a>
</div>

<h2>Restaurant Details</h2>

<hr/>

<h3>Restaurant Name: @Model.SelectedRestaurant.Name</h3>
<p>Address: @Model.SelectedRestaurant.Address</p>
<p>Phone: @Model.SelectedRestaurant.Phone</p>

<hr/>

<div>
    <h3>List of Coupons for @Model.SelectedRestaurant.Name Restaurant</h3>
    @foreach (var coupon in Model.KeptCoupons)
    {
        <label style="padding: 12px 12px 12px 0; display: inline-block;">@coupon.Title</label>
        <p>Valid Until: @coupon.ExpiryDate.ToLongDateString()</p>
        <br />
    }
</div>

<div>
    <form action="/Restaurant/Edit/@Model.SelectedRestaurant.RestaurantID" method="POST" style="border-radius: 5px; padding: 20px; margin:10px;">
        <button type="submit" value="Update Restaurant" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-edit"></span> Update Restaurant</button>
    </form>
</div>

<div>
    <form action="/Restaurant/DeleteConfirm/@Model.SelectedRestaurant.RestaurantID" method="POST" style="border-radius: 5px; padding: 20px; margin:10px;">
        <button type="submit" value="Delete Restaurant" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="trashIcon glyphicon glyphicon-trash"></span> Delete Restaurant</button>
    </form>
</div>