@{
    ViewBag.Title = "Home Page";
}

<div style="background-color: peachpuff;">
    <img src="~/Content/Images/homepage_image.png" alt="home page coupon image" style="width: 100%; height: auto;" />
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/Coupon/New" method="GET" style="border-radius: 5px; padding: 20px; margin:10px; text-align:center;">
            <button type="submit" value="Generate Coupon" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-plus"></span> Generate Coupon</button>
        </form>
    </div>
    <div class="col-md-6">
        <form action="/Email/New" method="GET" style="border-radius: 5px; padding: 20px; margin:10px; text-align:center;">
            <button type="submit" value="Send Email" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-send"></span> Send Email</button>
        </form>
    </div>
</div>