@model IEnumerable<GenerateCouponCapstone2022.Models.EmailDto>
@{
    ViewBag.Title = "List";
}

<h2 style="color:peru">List of Emails</h2>

<table class="table table-responsive table-striped">
    <tbody>
        @foreach (var email in Model)
        {
            <tr>
                <td><h3>@Html.Raw(email.Message)</h3> <br /> Created on: @email.CreatedAt.ToLongDateString()</td>
                <td><a class="btn btn-lg" href="/Email/Details/@email.EmailID"><span class="glyphicon glyphicon-eye-open" style="margin-top: 50px;"></span></a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <form action="/Email/New" method="POST" style="border-radius: 5px; padding: 20px; margin:10px;">
        <button type="submit" value="Send Email" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-send"></span> Send Email</button>
    </form>
</div>