@model GenerateCouponCapstone2022.Models.CustomerDto
@{
    ViewBag.Title = "Edit";
}

<div>
    <a href="/Customer/List" role="button" style="color: peru;">
        <span class="glyphicon glyphicon-arrow-left"></span> Back to the Customer List Page
    </a>
</div>

<h2>Update Customer Information</h2>

<form action="/Customer/Update/@Model.CustomerID" method="post" class="editForm" style="border-radius: 5px; padding: 20px;">
    <div style="display:none;">
        @* Pass through the customer ID *@
        <input type="text" name="CustomerID" value="@Model.CustomerID" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Name: <span style="color: red;">*</span></label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 5px;">
            <input type="text" name="Name" value="@Model.Name" data-val="true" data-val-required="Please Enter a valid Customer Name" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", data_valmsg_for = "Name" })
        </div>
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Email: <span style="color: red;">*</span></label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 5px;">
            <input type="text" name="Email" value="@Model.Email" data-val="true" data-val-required="Please Enter a valid Email Address" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", data_valmsg_for = "Email" })
        </div>
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Phone:</label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 5px;">
            <input type="text" name="Phone" value="@Model.Phone" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;" />
        </div>
    </div>
    <div class="row">
        <div class="col-25" style="float: left; width: 25%; margin-top: 5px;">
            <label style="padding: 12px 12px 12px 0; display: inline-block;">Do you want to get email notifications? <span style="color: red;">*</span></label>
        </div>
        <div class="col-75" style="float: left; width: 75%; margin-top: 15px;">
            <input type="radio" id="yes" name="IsSubscribed" value="True" required="required">
            <label for="yes">Yes</label>
            <input type="radio" id="no" name="IsSubscribed" value="False" checked>
            <label for="no">No</label>
        </div>
    </div>
    <button type="submit" value="Update Customer" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-edit"></span> Update Customer</button>
</form>