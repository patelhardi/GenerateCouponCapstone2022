@model GenerateCouponCapstone2022.Models.CustomerDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete Customer @Model.Name?</h2>

<form action="/Customer/List" method="GET" style="border-radius: 5px; padding: 20px; margin:10px;">
    <button type="submit" value="Cancel" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
</form>

<form action="/Customer/Delete/@Model.CustomerID" method="POST" style="border-radius: 5px; padding: 20px; margin:10px;">
    <button type="submit" value="Delete Customer" style="background-color: peachpuff; color: black; padding: 12px 20px; border: none; border-radius: 4px;"><span class="trashIcon glyphicon glyphicon-trash"></span> Delete Customer</button>
</form>